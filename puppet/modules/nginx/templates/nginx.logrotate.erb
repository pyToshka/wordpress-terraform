/var/log/nginx/*.log {
        daily
        missingok
        rotate <%= @log_rotate %>
        compress
        delaycompress
        notifempty
        create 640 <%= @user %> adm
        sharedscripts
        postrotate
                [ -f /var/run/nginx.pid ] && kill -USR1 `cat /var/run/nginx.pid`
        endscript
}

